# =============================================================================
# daflash.com Environment Variables
# =============================================================================
# Copy this file to .env.local and fill in your values.
# NEVER commit .env.local to version control.
# =============================================================================

# -----------------------------------------------------------------------------
# Sanity CMS Configuration
# -----------------------------------------------------------------------------
# Get these from https://www.sanity.io/manage
# Project ID: Found in your Sanity project settings
NEXT_PUBLIC_SANITY_PROJECT_ID=your_project_id

# Dataset: Usually "production" for live site
NEXT_PUBLIC_SANITY_DATASET=production

# API Version: Use a date string (YYYY-MM-DD) for stable API behavior
NEXT_PUBLIC_SANITY_API_VERSION=2024-01-01

# Write Token: Required for admin mutations (create/update/delete)
# Generate at: Sanity Dashboard > API > Tokens > Add API Token
# Permissions: Editor or higher
SANITY_API_WRITE_TOKEN=your_write_token

# -----------------------------------------------------------------------------
# Authentication (NextAuth.js)
# -----------------------------------------------------------------------------
# Secret: Generate with: openssl rand -base64 32
# Used to encrypt session cookies
NEXTAUTH_SECRET=your_nextauth_secret

# URL: Your site's canonical URL (no trailing slash)
# Development: http://localhost:3000
# Production: https://daflash.com
NEXTAUTH_URL=http://localhost:3000

# -----------------------------------------------------------------------------
# Admin Credentials
# -----------------------------------------------------------------------------
# These are used for the built-in admin login
# In production, use strong, unique values
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=your_secure_password
